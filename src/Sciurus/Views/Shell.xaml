<Window x:Class="Sciurus.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:v="clr-namespace:Sciurus.Views"
    Title="{Binding Title}" Width="{Binding Width}" Height="{Binding Height}">

  <DockPanel>

    <v:NavigationPanelView DockPanel.Dock="Top" DataContext="{Binding NavigationPanelViewModel}" />

    <v:StatusPanelView DockPanel.Dock="Bottom" DataContext="{Binding StatusPanelViewModel}" />

    <DockPanel MinWidth="50" Width="{Binding DetailsViewWidth}">

      <v:ContentDetailsView DockPanel.Dock="Bottom" MinHeight="50" Height="{Binding ContentDetailsViewHeight}"
          DataContext="{Binding ContentDetailsViewModel}" />

      <v:PartitionDetailsView DataContext="{Binding PartitionDetailsViewModel}" />

    </DockPanel>

    <v:PartitionContentsView DataContext="{Binding PartitionContentsViewModel}" />

  </DockPanel>
</Window>
