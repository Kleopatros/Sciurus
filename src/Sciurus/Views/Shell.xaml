<Window x:Class="Sciurus.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:w="clr-namespace:Sciurus.Windows"
    xmlns:v="clr-namespace:Sciurus.Views"
    Width="{w:SettingsBinding ShellViewWidth}" Height="{w:SettingsBinding ShellViewHeight}"
    Title="{Binding Title}">

  <DockPanel>

    <v:NavigationPanelView DockPanel.Dock="Top" DataContext="{Binding NavigationPanelViewModel}" />

    <v:StatusPanelView DockPanel.Dock="Bottom" DataContext="{Binding StatusPanelViewModel}" />

    <DockPanel MinWidth="50" Width="{w:SettingsBinding DetailsViewWidth}">

      <v:ContentDetailsView DockPanel.Dock="Bottom" DataContext="{Binding ContentDetailsViewModel}"
          MinHeight="25" Height="{w:SettingsBinding ContentDetailsViewHeight}" />

      <v:PartitionDetailsView DataContext="{Binding PartitionDetailsViewModel}" />

    </DockPanel>

    <v:PartitionContentsView DataContext="{Binding PartitionContentsViewModel}" />

  </DockPanel>
</Window>
